<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="my_template" inherit_id="web.assets_backend">
    <xpath expr="." position="inside">
        <link rel="stylesheet" href="/my_module/static/src/css/zoom.css"/>
        <script type="text/javascript" src="/my_module/static/src/js/zoom.js"></script>
    </xpath>
</template>

<template id="my_image_template" inherit_id="web.image_template">
    <xpath expr="." position="inside">
        <div t-attf-class="zoom-container #{widget.zoom and 'zoom-enabled' or ''}"
             data-zoom-level="2">
            <img t-att-src="widget.src" class="img img-responsive"/>
        </div>
    </xpath>
</template>

</odoo>
